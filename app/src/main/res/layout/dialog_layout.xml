<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:text="Enter the fees"
        android:layout_width="116dp"
        android:layout_height="37dp"
        android:id="@+id/title_dialog"
        android:textSize="20sp"
        android:layout_weight="0.00"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Balance:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:layout_below="@+id/textView8"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_marginTop="27dp" />

    <TextView
        android:text="8888"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fees_dialog"
        android:layout_below="@+id/title_dialog"
        android:layout_toRightOf="@+id/textView9"
        android:layout_toEndOf="@+id/textView9"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="19dp" />

    <TextView
        android:text="Fees:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:id="@+id/textView8"
        android:layout_alignBaseline="@+id/fees_dialog"
        android:layout_alignBottom="@+id/fees_dialog"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="8888"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView9"
        android:layout_alignRight="@+id/fees_dialog"
        android:layout_alignEnd="@+id/fees_dialog"
        android:id="@+id/balance_dialog" />

    <Button
        android:text="OK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonYes"
        android:layout_weight="0.00"
        android:layout_below="@+id/reciept_dialog"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="57dp" />

    <Button
        android:text="Cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonNo"
        android:layout_weight="0.00"
        android:layout_below="@+id/buttonYes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:text="Enter Payment:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_alignBaseline="@+id/reciept_dialog"
        android:layout_alignBottom="@+id/reciept_dialog"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/reciept_dialog"
        android:textSize="15sp"
        android:layout_marginTop="23dp"
        android:layout_width="60dp"
        android:layout_below="@+id/balance_dialog"
        android:layout_alignLeft="@+id/balance_dialog"
        android:layout_alignStart="@+id/balance_dialog"
        android:hint="Rupees" />

    <TextView
        android:text="Date:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reciept_dialog"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginTop="14dp"
        android:id="@+id/date_diaglog" />

</RelativeLayout>