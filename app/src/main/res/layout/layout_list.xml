<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:padding="5dp"

    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NAME:"
        android:id="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_height="wrap_content"
        android:text="SSSSSSSSSSSSSsssss"
        android:id="@+id/pName"

        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_width="wrap_content"
        android:maxLength="20" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MOB:"
        android:id="@+id/textView3"
        android:layout_alignBaseline="@+id/pMob"
        android:layout_alignBottom="@+id/pMob"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8888888888"
        android:id="@+id/pMob"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/pName"
        android:layout_alignStart="@+id/pName"

        android:maxLength="10" />

    <TextView
        android:text="Con. No."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cNo"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/pMob"
        android:layout_alignStart="@+id/pMob"
        />

    <RelativeLayout
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/pMob"
        >

        <TextView
            android:text="Bal:    Rs."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"

            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="0000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cBalance"

            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/textView5"
            android:layout_toEndOf="@+id/textView5" />

        <TextView
            android:text="Fees: Rs. "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"

            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="280"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cFees"


            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView5"
            android:layout_toEndOf="@+id/textView5" />

    </RelativeLayout>

    <TextView
        android:text="S/N"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vc_mac"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
