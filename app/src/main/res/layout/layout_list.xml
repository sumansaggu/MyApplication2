<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:padding="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NAME:"
        android:id="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_height="wrap_content"
        android:text="SSSSSSSSSSSSSsssss"
        android:id="@+id/pName"
        android:layout_columnSpan="2"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_width="150dp"
        android:maxLength="20" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MOB:"
        android:id="@+id/textView3"
        android:layout_alignBaseline="@+id/pMob"
        android:layout_alignBottom="@+id/pMob"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_row="1"
        android:layout_column="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8888888888"
        android:id="@+id/pMob"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/pName"
        android:layout_alignStart="@+id/pName"
        android:layout_row="1"
        android:layout_column="1"
        android:maxLength="10" />

    <TextView
        android:text="Con. No."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cNo"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/pMob"
        android:layout_alignStart="@+id/pMob"
        android:layout_row="2"
        android:layout_column="1" />

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:paddingRight="10dp"
        android:layout_width="120dp">

        <TextView
            android:text="Total: Rs. "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"

            android:layout_row="2"
            android:layout_column="2"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/textView5"
            android:layout_alignEnd="@+id/textView5" />

        <TextView
            android:text="280"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cFees"

            android:layout_row="1"
            android:layout_column="6"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textView5"
            android:layout_toEndOf="@+id/textView5"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp" />

        <TextView
            android:text="000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cBalance"

            android:layout_row="2"
            android:layout_column="6"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/relativeLayout"
            android:layout_alignStart="@+id/relativeLayout"
            android:layout_marginLeft="78dp"
            android:layout_marginStart="78dp" />

        <TextView
            android:text="Fees: Rs. "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"        android:layout_row="1"
            android:layout_column="2"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>


</RelativeLayout>
