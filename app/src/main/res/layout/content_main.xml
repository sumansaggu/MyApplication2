<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="1dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.saggu.myapplication.MainActivity"
    tools:layout_height="wrap_content"
    tools:showIn="@layout/activity_main">

    <EditText
        android:id="@+id/person_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:hint="Name"
        android:minWidth="300dp" />

    <EditText
        android:id="@+id/contact_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:hint="Mobile No"
        android:inputType="numberDecimal"
        android:minWidth="300dp"
        android:layout_below="@+id/person_name"
        android:layout_alignLeft="@+id/person_name"
        android:layout_alignStart="@+id/person_name" />

    <EditText

        android:id="@+id/cust_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/contact_no"
        android:layout_alignStart="@+id/contact_no"
        android:layout_below="@+id/contact_no"
        android:layout_marginTop="18dp"
        android:hint="Customer no."
        android:inputType="number" />

    <EditText

        android:id="@+id/fees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cust_no"
        android:layout_alignStart="@+id/cust_no"
        android:layout_below="@+id/cust_no"
        android:layout_marginTop="25dp"
        android:hint="Fees"
        android:inputType="number" />

    <EditText

        android:id="@+id/balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cust_no"
        android:layout_alignStart="@+id/cust_no"
        android:layout_below="@+id/fees"
        android:layout_marginTop="25dp"
        android:layout_toLeftOf="@+id/changeButton"
        android:layout_toStartOf="@+id/changeButton"
        android:hint="Balance"
        android:inputType="number" />

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/contact_no"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/contact_no"
        android:onClick="addButtonClicked"
        android:text="@string/add" />

    <Button
        android:id="@+id/changeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonAdd"
        android:layout_alignBottom="@+id/buttonAdd"
        android:layout_toEndOf="@+id/buttonAdd"
        android:layout_toRightOf="@+id/buttonAdd"
        android:onClick="update"
        android:text="Change"
        android:visibility="invisible" />

    <Button
        android:id="@+id/buttonViewAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonAdd"
        android:layout_alignBottom="@+id/buttonAdd"
        android:layout_alignEnd="@+id/contact_no"
        android:layout_alignRight="@+id/contact_no"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp"
        android:onClick="viewAll"
        android:text="@string/view_all" />

</RelativeLayout>
