<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.saggu.myapplication.MainActivity"
    tools:showIn="@layout/activity_main">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/person_name"
        android:layout_marginTop="28dp"
        android:minWidth="300dp"
        android:hint="Name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contact_no"
        android:layout_below="@+id/person_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:minWidth="300dp"
        android:hint="Mobile No"
        android:inputType="numberDecimal"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add"
        android:id="@+id/buttonAdd"
        android:onClick="addButtonClicked"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/contact_no"
        android:layout_alignLeft="@+id/contact_no"
        android:layout_alignStart="@+id/contact_no" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete"
        android:id="@+id/buttonDelete"
        android:onClick="deleteButtonClicked"
        android:layout_alignTop="@+id/buttonAdd"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_all"
        android:id="@+id/buttonViewAll"
        android:onClick="viewAll"
        android:layout_alignTop="@+id/buttonDelete"
        android:layout_alignRight="@+id/contact_no"
        android:layout_alignEnd="@+id/contact_no" />

</RelativeLayout>
