<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.saggu.myapplication.AddEditActivity"
    tools:layout_height="wrap_content"
    tools:showIn="@layout/add_edit_activity">


    <RelativeLayout
        android:id="@+id/layoutedittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/contact_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:hint="Mobile No"
            android:inputType="numberDecimal"
            android:minWidth="300dp"
            android:layout_below="@+id/person_name"
            android:layout_alignLeft="@+id/person_name"
            android:layout_alignStart="@+id/person_name" />

        <EditText

            android:id="@+id/balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Balance"
            android:inputType="number"
            android:layout_alignBaseline="@+id/cust_no"
            android:layout_alignBottom="@+id/cust_no"
            android:layout_alignRight="@+id/contact_no"
            android:layout_alignEnd="@+id/contact_no" />

        <EditText

            android:id="@+id/fees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Fees"
            android:inputType="number"
            android:layout_alignBaseline="@+id/balance"
            android:layout_alignBottom="@+id/balance"
            android:layout_centerHorizontal="true" />

        <EditText

            android:id="@+id/cust_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Cust No"
            android:inputType="number"
            android:layout_below="@+id/contact_no"
            android:layout_alignLeft="@+id/contact_no"
            android:layout_alignStart="@+id/contact_no" />

        <EditText
            android:id="@+id/person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:hint="Name"
            android:minWidth="300dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutButtons1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutedittext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <Button
            android:id="@+id/buttonViewAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_all"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:layout_marginEnd="14dp" />

        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            android:layout_alignBaseline="@+id/buttonViewAll"
            android:layout_alignBottom="@+id/buttonViewAll"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/changeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="update"
            android:text="Change"
            android:visibility="invisible"
            android:layout_alignBaseline="@+id/buttonAdd"
            android:layout_alignBottom="@+id/buttonAdd"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutButtons2"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_below="@+id/layoutButtons1"
        android:layout_alignLeft="@+id/relativeLayout5"
        android:layout_alignStart="@+id/relativeLayout5">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan SN"
            android:id="@+id/btnScanSN"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:visibility="invisible" />

        <Button
            android:text="SCAN VC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnScanVC"
            android:visibility="invisible"
            android:layout_alignBaseline="@+id/btnScanSN"
            android:layout_alignBottom="@+id/btnScanSN"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View STBs"
            android:id="@+id/btn_stb_record"
            android:visibility="invisible"
            android:layout_alignBaseline="@+id/btnScanVC"
            android:layout_alignBottom="@+id/btnScanVC"
            android:layout_toRightOf="@+id/btnScanVC"
            android:layout_toEndOf="@+id/btnScanVC" />
    </RelativeLayout>


</RelativeLayout>
